pipeline {
  agent any

  tools {
    nodejs 'NodeJS_22.16.0' // ← nom de l'installation Node.js déclarée dans Jenkins
  }

  stages {
    stage('Install dependencies') {
      steps {
        dir('frontend') {
          sh 'npm install'
        }
      }
    }

    stage('Run tests') {
      steps {
        dir('frontend') {
          sh 'npm run test'
        }
      }
    }
  }
}
